{
    "compilerOptions": {
        /* Basic Options */
        "target": "ES2020",
        "module": "commonjs",
        "lib": ["ES2020", "DOM"],
        "outDir": "./build",
        "rootDir": "./server",
        "strict": true,
        "strictPropertyInitialization": false,
        "types": ["node"],
        "esModuleInterop": true,
       
        /* Experimental Options */
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,

        /* Advanced Options */
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "exclude": ["node_modules"]
}
